---
import Layout from '../layouts/Layout.astro';
import FlipCard from '../components/FlipCard.astro';
import { getRandomWords } from '../utils/utils';

const words = await getRandomWords(10);
---

<Layout title="HSK2 Flashcards">
	<header class="title-container">
		<h1>
			<span class="title-decoration">〜</span>
			<span class="title-text">HSK2 Flashcards</span>
			<span class="title-decoration">〜</span>
		</h1>
	</header>
	<main class="container">
		<div class="cards-grid">
			{words.map((word) => (
				<FlipCard word={word} />
			))}
		</div>
	</main>
</Layout>

<style>
	.container {
		max-width: 1200px;
		width: 100%;
		margin: 0 auto;
		padding: var(--container-padding);
	}

	.title-container {
		text-align: center;
		margin: 2rem auto;
		padding: 0 var(--container-padding);
		width: 100%;
	}

	h1 {
		color: var(--chinese-red);
		font-size: var(--heading-size);
		font-weight: 500;
		letter-spacing: 0.1em;
		margin-bottom: 0.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.title-decoration {
		color: var(--chinese-gold);
		font-size: var(--title-decoration-size);
		opacity: 0.8;
	}

	.title-text {
		padding: 0 0.5rem;
	}

	.subtitle {
		color: var(--chinese-red);
		font-size: 1.2rem;
		opacity: 0.8;
		letter-spacing: 0.2em;
		margin-top: 0.5rem;
	}

	.cards-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		gap: var(--card-gap);
		padding: 0.5rem;
	}

	@media (max-width: 768px) {
		.cards-grid {
			grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
		}
	}

	@media (max-width: 480px) {
		.cards-grid {
			grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
		}
		
		.title-container {
			margin: 1.5rem auto;
		}
	}
</style>
