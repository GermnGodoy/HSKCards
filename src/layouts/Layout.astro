---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	:root {
		--chinese-red: #8B0000;
		--chinese-gold: #E8C59C;
		--chinese-jade: #F5F5F5;
		--pattern-color: rgba(232, 197, 156, 0.2);
	}

	body {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		background-color: var(--chinese-jade);
		min-height: 100vh;
		position: relative;
		background-image: 
			linear-gradient(var(--pattern-color) 1.5px, transparent 1.5px),
			linear-gradient(90deg, var(--pattern-color) 1.5px, transparent 1.5px);
		background-size: 50px 50px;
		background-position: -1px -1px;
	}

	body::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: 
			radial-gradient(var(--pattern-color) 1px, transparent 1px),
			radial-gradient(var(--pattern-color) 1px, transparent 1px);
		background-size: 30px 30px;
		background-position: 0 0, 15px 15px;
		pointer-events: none;
		opacity: 0.5;
	}
</style>
